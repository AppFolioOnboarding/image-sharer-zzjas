<%= image_tag(@image.url) %>
<%=
    link_to 'Delete',
    image_path(@image),
    "data-confirm": 'Are you sure to delete this image?',
    "data-method": 'delete'
%>
<ul>
    <% @image.tag_list.each do |tag| %>
        <li>
            <%= link_to tag, root_url(tag: tag) %>
        </li>
    <% end %>
</ul>